load("//cpp:cpp_grpc_library.bzl", "cpp_grpc_library")

cpp_grpc_library(
    name = "routeguide",
    deps = ["//example/proto:routeguide_proto"],
)

package(default_visibility = ["//visibility:public"])

cc_test(
    name = "feature_test",
    size = "small",
    srcs = ["feature_test.cc"],
    copts = ["-Iexternal/gtest/include"],
    deps = [
        ":helper",
        "//:gtest",
    ],
)

cc_library(
    name = "helper",
    srcs = ["helper.cc"],
    hdrs = ["helper.h"],
    deps = [":routeguide"],
)

cc_binary(
    name = "client",
    srcs = ["client.cc"],
    data = ["//example/proto:routeguide_features"],
    deps = [":helper"],
)

cc_binary(
    name = "server",
    srcs = ["server.cc"],
    data = ["//example/proto:routeguide_features"],
    deps = [":helper"],
)
